---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import CTABanner from '../components/CTABanner.astro';

const faqs = [
  { q: 'What areas do you serve?', a: 'We serve Mooresville, Bargersville, Greenwood, Plainfield, Brownsburg, and the greater central Indiana area.' },
  { q: 'What brands do you use for irrigation systems?', a: 'We exclusively use Rain Bird commercial grade products and PVC piping. These are the same products used on professional golf courses and commercial properties.' },
  { q: 'What is head-to-head coverage?', a: "Head-to-head coverage means each sprinkler head's spray reaches the next head, ensuring uniform watering across your entire lawn with no dry spots." },
  { q: 'Do you offer free estimates?', a: 'Yes! We offer free in-person consultations for all of our services. We believe in transparent pricing with no surprises.' },
  { q: 'Are you licensed and insured?', a: 'Yes, Allen Irrigation Company is fully licensed and insured for your peace of mind.' },
  { q: 'How long does an irrigation installation take?', a: 'Most residential installations are completed in 1-3 days depending on the size of the property and complexity of the system.' },
  { q: 'Do you service existing irrigation systems?', a: 'Yes, we service and repair existing irrigation systems, including spring startups and fall winterizations.' },
  { q: 'When should I book holiday lighting?', a: 'We recommend booking holiday lighting installation in early fall, as our schedule fills up quickly. Contact us by September or October for the best availability.' },
  { q: 'What are your working hours?', a: 'Monday 7:30 AM – 3:30 PM, Tuesday 7:30 AM – 3:00 PM, Wednesday through Friday 8:00 AM – 3:00 PM. We are closed Saturday and Sunday.' },
  { q: 'How long have you been in business?', a: 'Allen Irrigation Company was established in 2001 by Nic Allen, giving us over 20 years of experience serving central Indiana.' },
];
---
<BaseLayout title="FAQ" description="Frequently asked questions about Allen Irrigation Company's services.">
  <Hero
    title="Frequently Asked Questions"
    subtitle="Answers to common questions about our services"
    image="https://images.unsplash.com/photo-1558618666-fcd25c85f82e?w=1920&q=80"
    compact
  />

  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-6">
        {faqs.map((faq, i) => (
          <details class="bg-white rounded-lg shadow-md group" open={i === 0}>
            <summary class="flex justify-between items-center cursor-pointer p-6 font-heading font-semibold text-green-dark text-lg hover:text-green-mid transition-colors">
              {faq.q}
              <svg class="w-5 h-5 flex-shrink-0 ml-4 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="px-6 pb-6 text-gray-600">{faq.a}</div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <CTABanner title="Still Have Questions?" subtitle="We're happy to help. Contact us anytime for answers or a free consultation." />
</BaseLayout>
