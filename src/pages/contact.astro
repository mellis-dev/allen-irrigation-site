---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
---
<BaseLayout title="Contact Us" description="Contact Allen Irrigation Company for a free consultation on irrigation, landscape lighting, or holiday lighting services.">
  <Hero
    title="Contact Us"
    subtitle="Get in touch for a free consultation"
    image="https://images.unsplash.com/photo-1416879595882-3373a0480b5b?w=1920&q=80"
    compact
  />

  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="section-title">Send Us a Message</h2>
          <p class="text-gray-600 mb-8">Fill out the form below and we'll get back to you as soon as possible.</p>
          <form class="space-y-6" action="#" method="POST">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block font-heading font-semibold text-gray-dark mb-2">Name *</label>
                <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-accent focus:border-transparent outline-none transition" />
              </div>
              <div>
                <label for="phone" class="block font-heading font-semibold text-gray-dark mb-2">Phone</label>
                <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-accent focus:border-transparent outline-none transition" />
              </div>
            </div>
            <div>
              <label for="email" class="block font-heading font-semibold text-gray-dark mb-2">Email *</label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-accent focus:border-transparent outline-none transition" />
            </div>
            <div>
              <label for="service" class="block font-heading font-semibold text-gray-dark mb-2">Service Interested In</label>
              <select id="service" name="service" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-accent focus:border-transparent outline-none transition bg-white">
                <option value="">Select a service...</option>
                <option value="irrigation">Irrigation Systems</option>
                <option value="landscape-lighting">Landscape Lighting</option>
                <option value="holiday-lighting">Holiday Lighting</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div>
              <label for="message" class="block font-heading font-semibold text-gray-dark mb-2">Message *</label>
              <textarea id="message" name="message" rows="5" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-accent focus:border-transparent outline-none transition resize-vertical"></textarea>
            </div>
            <button type="submit" class="btn-primary w-full sm:w-auto">Send Message</button>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="section-title">Get In Touch</h2>
          <div class="space-y-8 mt-8">
            <div>
              <h3 class="font-heading font-semibold text-lg text-green-dark mb-2">ğŸ“ Location</h3>
              <p class="text-gray-600">Mooresville, Indiana<br />Serving Central Indiana</p>
            </div>
            <div>
              <h3 class="font-heading font-semibold text-lg text-green-dark mb-2">ğŸ• Working Hours</h3>
              <ul class="text-gray-600 space-y-1">
                <li>Monday: 7:30 AM â€“ 3:30 PM</li>
                <li>Tuesday: 7:30 AM â€“ 3:00 PM</li>
                <li>Wednesday â€“ Friday: 8:00 AM â€“ 3:00 PM</li>
                <li>Saturday â€“ Sunday: Closed</li>
              </ul>
            </div>
            <div>
              <h3 class="font-heading font-semibold text-lg text-green-dark mb-2">ğŸ’¬ Free Consultations</h3>
              <p class="text-gray-600">We offer free in-person consultations for all services. Contact us to schedule yours today.</p>
            </div>
          </div>

          <!-- Map Placeholder -->
          <div class="mt-8 bg-gray-200 rounded-lg h-64 flex items-center justify-center">
            <div class="text-center text-gray-500">
              <span class="text-4xl block mb-2">ğŸ“</span>
              <p class="font-heading font-semibold">Mooresville, Indiana</p>
              <p class="text-sm">Map integration coming soon</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
