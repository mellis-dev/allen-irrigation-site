---
interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
  image: string;
}

const { title, description, icon, href, image } = Astro.props;
---
<a href={href} class="group block bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
  <div class="h-48 bg-cover bg-center" style={`background-image: url('${image}')`}>
    <div class="h-full w-full bg-green-dark/40 group-hover:bg-green-dark/60 transition-colors duration-300 flex items-center justify-center">
      <span class="text-5xl">{icon}</span>
    </div>
  </div>
  <div class="p-6">
    <h3 class="font-heading font-bold text-xl text-green-dark mb-3 group-hover:text-green-mid transition-colors">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <span class="text-green-accent font-semibold inline-flex items-center">
      Learn More
      <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </span>
  </div>
</a>
