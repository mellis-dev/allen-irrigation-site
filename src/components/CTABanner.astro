---
interface Props {
  title?: string;
  subtitle?: string;
}
const { title = 'Ready to Transform Your Property?', subtitle = 'Contact us today for a free consultation and discover what Allen Irrigation can do for you.' } = Astro.props;
---
<section class="relative bg-cover bg-center bg-fixed py-20" style="background-image: url('https://images.unsplash.com/photo-1416879595882-3373a0480b5b?w=1920&q=80')">
  <div class="absolute inset-0 bg-green-dark/80"></div>
  <div class="relative max-w-4xl mx-auto px-4 text-center text-white">
    <h2 class="font-heading font-bold text-3xl md:text-4xl mb-4">{title}</h2>
    <p class="text-lg text-white/90 mb-8">{subtitle}</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/contact" class="btn-primary">Get a Free Quote</a>
      <a href="/services" class="btn-secondary">Our Services</a>
    </div>
  </div>
</section>
